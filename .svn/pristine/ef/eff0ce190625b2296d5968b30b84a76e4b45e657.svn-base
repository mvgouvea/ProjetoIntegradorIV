<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core">

<ui:composition template="template.xhtml">
	<ui:define name="conteudo">
		<h:body>
			<script type="text/javascript">
				$(document).ready(function() {
					$(function() {
						$('.data').mask("99/99/9999");
					});
				});
			</script>
			<script type="text/javascript">
				jQuery(document).ready(function() {
					jQuery('.compra').priceFormat({
						prefix : 'R$ ',
						centsSeparator : ',',
						thousandsSeparator : '.'
					});
				});
			</script>
			<h:form id="formCadastro">
				<h:panelGrid columns="2">
					<f:facet name="header">
						<h2>
							<h:outputLabel value="Cadastro de Patrimônios" />
						</h2>
					</f:facet>
					<h:outputLabel value="Código:" />
					<h:inputText value="#{patrimonio.patrimonio.codigo}"
						readonly="#{patrimonio.codigoEditvael}" />
					<h:outputLabel value="Descrição:" />
					<h:inputText value="#{patrimonio.patrimonio.descricao}" />
					<h:outputLabel value="Data de Compra:" />
					<h:inputText id="data" value="#{patrimonio.patrimonio.dataCompra}"
						styleClass="data">
						<f:convertDateTime pattern="dd/MM/yyyy"
							timeZone="America/Brasilia" />
					</h:inputText>
					<h:outputLabel value="Valor de compra:" />
					<h:inputText value="#{patrimonio.patrimonio.valorCompra}"
						id="compra" styleClass="compra" converter="dinheiroConverter" />
					<h:outputLabel value="Turno de Trabalho:" />
					<h:selectOneMenu value="#{patrimonio.patrimonio.turnoTrabalho}">
						<f:selectItem itemLabel="1" itemValue="1" />
						<f:selectItem itemLabel="2" itemValue="2" />
						<f:selectItem itemLabel="3" itemValue="3" />
					</h:selectOneMenu>
					<h:outputLabel value="Tipo de patrimônio:" />
					<h:selectOneMenu value="#{patrimonio.patrimonio.tipoPatrimonio}">
						<f:selectItems value="#{tipoPatrimonio.buscaTodos}" var="tipo"
							itemLabel="#{tipo.descricao}" itemValue="#{tipo.codigo}" />
					</h:selectOneMenu>
					<h:outputLabel value="Condição do patrimônio" />
					<h:selectOneRadio value="#{patrimonio.patrimonio.condicao}">
						<f:selectItem itemLabel="Novo" itemValue="n" />
						<f:selectItem itemLabel="Usado" itemValue="u" />
					</h:selectOneRadio>
					<h:outputLabel value="Anos de uso:" />
					<h:inputText value="#{patrimonio.patrimonio.anosUso}" />
					<h:outputLabel value="Valor residual:" />
					<h:inputText value="#{patrimonio.patrimonio.valorResidual}"
						styleClass="compra" converter="dinheiroConverter" />
				</h:panelGrid>
				<h:commandButton value="Gravar" action="#{patrimonio.actionGrava}" />
				<h:commandButton value="Cancelar" action="index.xhtml" />
			</h:form>
		</h:body>
	</ui:define>
</ui:composition>
</html>